<div class="navbar">
  <ul class="navbar-nav">
    <li class="nav-item">
      <%= link_to "Home", root_path %>
    </li>
    <li class="nav-item">
      <%= link_to "Milkshakes", milkshakes_path %>
    </li>
      <li class="nav-item">
        <%= link_to "New milkshake", new_milkshake_path %>
      </li>
  </ul>
