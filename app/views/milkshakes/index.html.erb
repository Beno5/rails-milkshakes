<div class="container">
 <%= render 'shared/navbar' %>
  <div class="container index"><h1>Welcome <%= current_user.email %></h1></div>
      <div class="cards">

        <% @milkshakes.each do |milkshake| %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path milkshake.photo.key, height: 300, width: 400, crop: :fill %>')">
            <%= link_to milkshake.name, milkshake_path(milkshake) %>
             <% if policy(milkshake).destroy? %>
              <%= link_to 'Delete', milkshake_path(milkshake), method: :delete, date: {confirm: "Are you sure"}, class: "btn btn-danger" %>
             <% end %>
           
          </div>
          <% end %>
      </div>
</div>
 <%= render 'shared/footer' %>
