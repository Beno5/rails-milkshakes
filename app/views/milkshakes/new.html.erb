<div class="navbar">
  <ul class="navbar-nav">
    <li class="nav-item">
      <%= link_to "Home", root_path %>
    </li>
    <li class="nav-item">
      <%= link_to "Milkshakes", milkshakes_path %>
    </li>
      <li class="nav-item">
      <%= link_to "New milkshake", new_milkshake_path %>
    </li>
  </ul>
</div>

<div class="container">
  <div class="container index"><h1>Make your own milkshake</h1></div>
    <div class="container form">
      <%= simple_form_for @milkshake do |f| %>
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.input :photo, as: :file %>
      <%= f.submit "Submit milkshake", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>