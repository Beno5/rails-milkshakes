
<div class="container">
<%= render 'shared/navbar' %>
  <div class="container index"><h1>Make your own milkshake</h1></div>
    <div class="container form">
      <%= simple_form_for @milkshake do |f| %>
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.input :photo, as: :file %>
      <%= f.submit "Submit milkshake", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
 <%= render 'shared/footer' %>
</div>
